@model List<Barton_Books.Models.Customer>
@{
    ViewBag.Title = "All";
}

<link rel="stylesheet" href="~/Content/main.css" />
<script src="~/Scripts/main.js"></script>

<h2>All</h2>

<a href="/Customers/Upsert/0">Add New</a>

<div class="row">
    <div class="col-md-6">
        <input id="txtSearch" type="text" class="form-control" placeholder="Search..." />
    </div>
    <div class="col-md-6">
        <input type="button" class="btn btn-info" value="Search" onclick="searchCustomers();" />
    </div>
</div>

<table class="table table-hover sortable">
    <thead>
        <tr>
            <th onclick="sortCustomers(0);">Customer ID</th>
            <th onclick="sortCustomers(1);">Name</th>
            <th onclick="sortCustomers(2);">Address</th>
            <th onclick="sortCustomers(3);">City</th>
            <th onclick="sortCustomers(4);">State</th>
            <th onclick="sortCustomers(5);">Zip Code</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var customer in Model)
        {
        <tr>
            <td>@customer.CustomerID</td>
            <td>@customer.Name</td>
            <td>@customer.Address</td>
            <td>@customer.City</td>
            <td>@customer.State</td>
            <td>@customer.ZipCode</td>
            <td>
                <a href="/Customers/Upsert/@customer.CustomerID">Edit</a>
            </td>
        </tr>
        }
    </tbody>
</table>

