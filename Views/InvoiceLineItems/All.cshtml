@model List<Barton_Books.Models.InvoiceLineItem>
@{
    ViewBag.Title = "All";
}

<link rel="stylesheet" href="~/Content/main.css" />
<script src="~/Scripts/main.js"></script>

<h2>All</h2>

<div class="row">
    <div class="col-md-6">
        <input id="txtSearch" type="text" class="form-control" placeholder="Search..." />
    </div>
    <div class="col-md-6">
        <input type="button" class="btn btn-info" value="Search" onclick="searchLineItems();" />
    </div>
</div>

<table class="table table-hover sortable">
    <thead>
        <tr>
            <th onclick="sortLineItems(0);">Invoice ID</th>
            <th onclick="sortLineItems(1);">Product Code</th>
            <th onclick="sortLineItems(2);">Unit Price</th>
            <th onclick="sortLineItems(3);">Quantity</th>
            <th onclick="sortLineItems(4);">Item Total</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.InvoiceID</td>
                <td>@item.ProductCode</td>
                <td>@item.UnitPrice</td>
                <td>@item.Quantity</td>
                <td>@item.ItemTotal</td>
                <td>
                    <a href="/InvoiceLineItems/Upsert/@item.InvoiceID">Edit</a>
                </td>
            </tr>
        }
    </tbody>
</table>

